<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <connectionStrings>
    <!--使用 Sessionid 来实现推送数据信息（适用于一台机器上有1个以上客户端）-->
    <!--使用 HostName  来实现推送数据信息（适用于一台机器上只有1个客户端）-->
    <add name="SendMessageType" connectionString="Sessionid"/>

  </connectionStrings>

  <system.serviceModel>
    <services>
      <service behaviorConfiguration="WCFService.Service1Behavior"
        name="WCFService.Service1">
        <endpoint binding="netTcpBinding" bindingConfiguration="netTCPBinding"
          name="netTcpBinding" contract="WCFService.IService1" />
        <endpoint address="mex" binding="mexTcpBinding" name="mexTcpBinding"
          contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://10.201.41.88:8732//WCFService/Service1/" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="WCFService.Service1Behavior">
          <serviceDebug includeExceptionDetailInFaults="True"/>
          <serviceMetadata />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <bindings>
      <netTcpBinding>
        <!--Condition 1 : maxBufferSize has to equal to maxReceivedMessageSize
            Condition 2 : maxBufferSize has to bigger than reciving buffer-->
        <binding name="netTCPBinding" closeTimeout="00:03:00" openTimeout="00:03:00"
          receiveTimeout="00:03:00" sendTimeout="00:03:00" maxBufferPoolSize="5000000"
          maxBufferSize="5000000" maxReceivedMessageSize="5000000">
          <security mode="None" />
        </binding>
      </netTcpBinding>
    </bindings>

  </system.serviceModel>
</configuration>